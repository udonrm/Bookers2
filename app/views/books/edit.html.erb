<div class ="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <%= @book.errors.count %> <%= @book.errors.count == 1 ? 'error' : 'errors' %>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>


      <%= form_with model: @book do |f| %>
        <label for="inputTitle">Title</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle" %><br>
        <label for="inputOpinion">Opinion</label><br>
        <%= f.text_area :body, autofocus: true, id:"inputOpinion" %>
        <%= f.submit "Update Book", class: "btn btn-outline-primary" %><br>
        <%= link_to 'Show' , book_path(@book) %>
        <%= link_to 'Back' , books_path %>
      <% end %>
    </div>
  </div>
</div>