<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= render 'book', user: current_user %>
<div class = 'books'>
  <h1>Books</h1>
  <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
          <% @books.each do |book| %>
          <tr>
          <td><span><%= image_tag book.user.get_profile_image(100,100) %></span></td>
          <td><span><%= link_to book.title, book_path(book) %></span></td>
          <td><span><%= book.body %></span></td>
          </tr>
          <% end %>
    </table>
</div>