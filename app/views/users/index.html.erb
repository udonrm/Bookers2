<div class ="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/book', user: current_user, book: @book %>
    </div>

    <div class = "col-md-8 offset-md-1">
      <h1>Users</h1>
        <table class="table table-striped">
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
            <% @users.each do |user| %>
            <tr>
              <td><span><%= image_tag user.get_profile_image(100,100) %></span></td>
              <td><span><%= user.name %></span></td>
              <td><span><%= link_to 'Show', user_path(user) %></span></span></td>
            </tr>
            <% end %>
        </table>
    </div>
  </div>
</div>