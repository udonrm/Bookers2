<%= render 'books/book', user: @user, book: @book %>

<h1>Books</h1>

<table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
      <% @books.each do |book| %>
      <tr>
        <td><span><%= link_to image_tag book.user.get_profile_image(100,100) %></span></td>
        <td><span><%= link_to book.title, book_path(book)%></span></td>
        <td><span><%= book.body %></span></span></td>
      </tr>
      <% end %>
</table>